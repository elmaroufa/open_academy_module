<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="opencademy.list">
      <field name="name">open academy list</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- form openacademy-->
    <record model="ir.ui.view" id="course_form_view">
     <field name="name">course.form</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
      <form string="Form Course">
       <sheet>
        <group>
          <field name="name"/>
          <field name="description"/>
        </group>
       </sheet>
      </form>
      </field>
    </record>

<record model="ir.ui.view" id="openacademy.search">
      <field name="name">course.search</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="description"/>
        </search>
      </field>
    </record>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="course_list_action">
      <field name="name">Courses</field>
      <field name="res_model">openacademy.course</field>
      <field name="view_mode">tree,form</field>
       <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first course
            </p>
        </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="openacademy Main" id="openacademy.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Course Show" id="openacademy.menu_1" parent="openacademy.menu_root"/>
    <menuitem name="Course Display" id="openacademy.menu_2" parent="openacademy.menu_root"/>

    <!-- actions -->

    <menuitem name="Show List" id="openacademy.menu_1_list" parent="openacademy.menu_1"
              action="course_list_action"/>
    <menuitem name="Display List" id="openacademy,menu_2_list" parent="openacademy.menu_2"
              action="course_list_action"/>

  </data>
</odoo>